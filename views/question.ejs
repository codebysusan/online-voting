<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="csrf-token" content="<%= csrfToken %>" />
    <meta name="questions" content="<%= questions %>" />

    <link rel="stylesheet" href="/css/style.css" />
    <script class="" src="https://cdn.tailwindcss.com"></script>
    <title><%= title %></title>

    <script>
      var token = document
        .querySelector('meta[name="csrf-token"]')
        .getAttribute("content");

      const questions = document
        .querySelector('meta[name="questions"]')
        .getAttribute("content");

      function deleteQuestion(id) {
        console.log(questions);
        console.log(id);
        fetch(`/question/${id}`, {
          method: "delete",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({
            _csrf: token,
          }),
        })
          .then((res) => {
            if (res.ok) {
              window.location.reload();
            }
          })
          .catch((err) => console.log(err));
      }
    </script>
  </head>
  <body>
    <div class="grid grid-cols-6">
      <div class="col-start-3 col-span-2">
        <%- include('header.ejs') %>
        <nav>
          <ul class="flex">
            <li class="flex-start">
              <a href="/elections">Home</a>
            </li>
            <span class="mx-3"> >> </span>
            <li class="flex-start">
              <a href="/elections/<%=election.id%>"><%= election.title %></a>
            </li>
            <span class="mx-3"> >> </span>
            <li class="flex-start">
              <a href="/elections/<%=election.id%>/questions">Questions</a>
            </li>
          </ul>
        </nav>
        <h1 class="text-4xl mt-6 font-bold">
          <%= election.title %> - Question
        </h1>
        <p class="py-4 text-lg">
          You have <%= questions.length %> questions in the ballot.
        </p>
        <p class="underline">
          <a
            class="text-blue-600 text-lg"
            href="/elections/<%= election.id %>/questions/new"
            >Create a questions</a
          >
        </p>
        <div class="py-6">
          <% if(questions.length > 0){%> <% for(let i = 0; i < questions.length;
          i++){ %>
          <div class="flex">
            <div class="flex-auto">
              <div class="flex">
                <div class="flex-start pr-4">
                  <p><%= i+1 %>.</p>
                </div>
                <div class="flex-auto">
                  <a href="/questions/<%=questions[i].id%>"
                    ><%= questions[i].question %></a
                  >
                  <p></p>
                </div>
              </div>
            </div>
            <div class="flex-end px-8">
              <p class="pb-4 underline">
                <!-- <a class="text-blue-600" href="/question/:id/edit">Edit</a> -->
                <a
                  class="text-blue-600"
                  href="/question/<%= questions[i].id%>/edit"
                  >Edit</a
                >
              </p>
            </div>
            <div class="flex-end">
              <p class="pb-4 underline">
                <a
                  class="text-blue-600"
                  href="#"
                  onclick="{deleteQuestion(<%= questions[i].id %>)}"
                  >Delete</a
                >
              </p>
            </div>
          </div>
          <% }%> <% }%>
        </div>
      </div>
    </div>
  </body>
</html>
